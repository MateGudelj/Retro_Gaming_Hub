{
  "kind": "collectionType",
  "collectionName": "forum_posts",
  "info": {
    "singularName": "forum-post",
    "pluralName": "forum-posts",
    "displayName": "ForumPost"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "blocks"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Consoles",
        "Games",
        "Mods",
        "Collectibles"
      ]
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
